# RetroFX generated picom config.
# Keep this file under repo control and launch picom with:
#   (cd <repo>/active && picom --config picom.conf)

backend = "glx";
vsync = true;
use-damage = true;
log-level = "warn";

# Keep blur lightweight for deterministic frame-time.
blur-method = "dual_kawase";
blur-strength = @BLUR_STRENGTH@;
blur-background = @BLUR_ENABLED@;
blur-background-frame = @BLUR_ENABLED@;

# Shader path is relative to this config file.
window-shader-fg = "@SHADER_PATH@";

# Conservative defaults to reduce accidental overhead.
unredir-if-possible = false;
mark-wmwin-focused = true;
mark-ovredir-focused = false;
